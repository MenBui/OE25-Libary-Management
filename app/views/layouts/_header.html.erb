<div class="top_bg">
  <div class="container">
    <div class="header_top-sec">
      <div class="top_left">
          <ul>
            <li class="top_link">
              <%= t "contact" %>:
              <%= link_to Settings.mail, "#" %>
            </li>
        <% if logged_in? %>
          <li class="dropdown">
            <%= link_to "#", class: "dropdown-toggle", data: {toggle: "dropdown"} do %>
              <%= current_user.name %>
            <% end %>
            <ul class="dropdown-menu">
              <li><%= link_to t("profile"), current_user %></li>
              <li><%= link_to t("settings"), edit_user_path(current_user) %></li>
              <li><%= link_to t("borrowed_book"), borroweds_path %></li>
              <li class="divider"></li>
              <li><%= link_to t("log_out"), logout_path, method: :delete %></li>
            </ul>
            </li>
            <% else %>
           <button type="button" class="btn btn-light "><%= link_to t("log_in"), login_path %></button>
          <% end %>
          </ul>
      </div>
      <div class="clearfix"> </div>
    </div>
  </div>
</div>
<div class="header_top">
  <div class="container">
    <div class="logo">
      <%= link_to t("library_management"), root_url %>
    </div>
    <% if logged_in? %>
      <div class="header_right">
        <div class="cart box_1">
          <%= link_to "#" do %>
            <div class="total">
              <% if session[:borrowed_id] && current_borrowed.borrowed_details.size != Settings.size_cart %>
                <%= link_to borrowed_path current_borrowed do %>
                  <%= t "cart" %>(<strong id ="size_card"><%= current_borrowed.borrowed_details.size %></strong>)
                  <%= image_tag("cart.png") %>
                <% end %>
              <% else %>
                <%= t "empty_cart" %>
                <%= image_tag("cart.png") %>
              <% end %>
            </div>
          <% end %>
          <div class="clearfix"> </div>
        </div>
      </div>
    <% end %>
    <div class="clearfix"></div>
  </div>
</div>
<div class="mega_nav">
  <div class="container">
    <div class="menu_sec">
      <ul class="megamenu skyblue">
        <li class="active grid"><%= link_to t("home"), root_url, class: "color1" %></li>
        <% Category.all.each do |category| %>
          <% if category.parent_id == nil %>
            <li><%= link_to category.name , category_path(category), class: "color1" %></li>
          <% end %>
        <% end %>
      </ul>
      <%= form_tag books_path, method: :get, id: :search_form do %>
        <%= text_field_tag :search, params[:search], placeholder: t("search") %>
        <%= submit_tag t("search") %>
      <% end %>
      <div class="clearfix"></div>
    </div>
  </div>
</div>
